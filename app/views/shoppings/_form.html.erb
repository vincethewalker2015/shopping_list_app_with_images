
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well shoplist">
      <%= form_for @shop do |f| %>
        <p>
          <%= f.label :Add_item %><br />
          <%= f.text_field :item, class: "bdr-frm" %>
        </p>
      <p>
        <%= f.submit "Add to shopping list", class: "btn btn-primary" %> <br /><br />
        <%= link_to "View Shopping List", shoppings_path, class: "btn btn-warning"%>
      </p>
    <% end %>
    </div>
  </div>
</div>
